<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popupPOIDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:background="@drawable/shape_corner_bg_with_line_5"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/toolbar_background"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_5">

        <ImageView
            android:id="@+id/imgPOI"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/photo_hydrant" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingStart="12.5dp">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="智能消火栓88888888"
                android:textColor="@color/colorDark"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="南京市江宁区滨江开发区喜燕路5号"
                android:textColor="@color/colorGray"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <cn.njmeter.intelligenthydrant.widget.textview.DrawableStartCenterTextView
            android:id="@+id/btnNav"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/btn_nav"
            android:focusable="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="去这里"
            android:textColor="@color/colorTheme"
            android:textSize="14sp" />

        <TextView
            android:layout_width="1px"
            android:layout_height="15dp"
            android:background="@color/colorLightGray" />

        <cn.njmeter.intelligenthydrant.widget.textview.DrawableStartCenterTextView
            android:id="@+id/btnOpen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/btn_nav"
            android:focusable="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="开锁"
            android:textColor="@color/colorTheme"
            android:textSize="14sp" />

        <TextView
            android:layout_width="1px"
            android:layout_height="15dp"
            android:background="@color/colorLightGray" />

        <cn.njmeter.intelligenthydrant.widget.textview.DrawableStartCenterTextView
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_background"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/btn_nav"
            android:focusable="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="关锁"
            android:textColor="@color/colorTheme"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>